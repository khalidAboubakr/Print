<!DOCTYPE html>
<html dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - الرئيسية</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        * {
            box-sizing: border-box;
        }

        .row:after {
            content: "";
            clear: both;
            display: block;
        }

        [class*="col-"] {
            float: left;
            padding: 10px;
        }

        .col-1 {
            width: 8.33%;
        }

        .col-2 {
            width: 16.66%;
        }

        .col-3 {
            width: 33%;
        }

        .col-4 {
            width: 30%;
        }

        .col-5 {
            width: 43.66%;
        }

        .col-6 {
            width: 50%;
        }

        .col-7 {
            width: 58.33%;
        }

        .col-8 {
            width: 66.66%;
        }

        .col-9 {
            width: 75%;
        }

        .col-10 {
            width: 83.33%;
        }

        .col-11 {
            width: 91.66%;
        }

        .col-12 {
            width: 100%;
        }

        html {
            font-family: "Lucida Sans", sans-serif;
        }

        .header {
            background-color: #ffffff;
            color: #ffffff;
            padding: 15px;
        }

        .menu ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
        }

        .menu li {
            padding: 12px;
            margin-bottom: 12px;
            background-image: linear-gradient(to left, #1ca8e0, #1ea64a);
            color: white;
            box-shadow: 0 1px 1px rgba(0,0,0,0.12), 0 1px 2px rgba(0,0,0,0.24);
        }

            .menu li:hover {
                background-image: linear-gradient(to left, #1ca8e0, #1ea64a);
                color: white;
            }

        a:hover {
            color: #000000 !important;
            background: none !important;
        }

        .dropdown-menu > a:hover {
            color: white !important;
            background: none !important;
            background-image: linear-gradient(to left, #1ca8e0, #1ea64a) !important;
        }

        span {
            text-decoration: underline;
            color: #008754;
            cursor: pointer;
        }

        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        thead {
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
            text-align: center;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("اشعار مراجعة", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("الرئيسية", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <div>
        <nav class="navbar navbar-expand-lg navbar-dark " style="margin:130px 0 0 0; background-color:#1ca8e0; background-image: linear-gradient(to left, #1ca8e0 , #1ea64a);">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto" style="margin-right:60px; ">
                    <li class="nav-item dropdown">
                        <a class="aria-expanded=" false" style="font-size: 20px; color: white;">إشعار مراجعة </a>
                    </li>
                </ul>
            </div>

        </nav>
    </div>
    <div>

        @RenderBody()
        <hr />

    </div>


    <nav class="navbar navbar-expand-lg navbar-dark " style="margin:10px 0 0 0; background-color:#1ca8e0; background-image: linear-gradient(to left, #1ca8e0 , #1ea64a);">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>


        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto" style="margin-right:70%;">
                <li class="nav-item dropdown">

                    <a class= href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="font-size:15px; color: rgb(255, 255, 255);">By ;Abdulmohsen Alhulaymah   </a>
                </li>
            </ul>
        </div>


        <script src="js/jquery-2.1.4.js"></script>
        <script src="js/main.js"></script>



        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
